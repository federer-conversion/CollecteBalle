  <gazebo reference="base_link">
    <visual>
      <material>
        <ambient>0.3 1. 0.3 1.0</ambient>
        <diffuse>0.3 1. 0.3 1.0</diffuse>
        <specular>0.3 1. 0.3 1.0</specular>
        <emissive>0.3 1. 0.3 1.0</emissive>
      </material>
    </visual>
  </gazebo>
  <link name="base_link">
